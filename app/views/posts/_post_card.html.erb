<div class="card h-100">
  <div class="card-body">
    <h5 class="card-title"><%= link_to post.title, post_path(post), class: "text-decoration-none" %></h5>
    <h6 class="card-subtitle mb-2 text-muted">
      Por <%= post.user.email %> â€¢ <%= l post.created_at, format: :short %>
    </h6>
    <p class="card-text"><%= truncate(post.content, length: 150) %></p>
  </div>
  <% if user_signed_in? && post.user == current_user %>
    <div class="card-footer bg-transparent">
      <%= link_to 'Editar', edit_post_path(post), class: 'btn btn-sm btn-outline-primary' %>
      <%= button_to 'Excluir', post_path(post), 
          method: :delete,
          class: 'btn btn-sm btn-outline-danger',
          form: { data: { turbo_confirm: 'Tem certeza?' } } %>
    </div>
  <% end %>
</div>