<div class="card">
  <div class="card-body">
    <%= form_with(model: tag) do |f| %>
      <% if tag.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(tag.errors.count, "erro") %> encontrado:</h4>
          <ul>
            <% tag.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :name, "Nome", class: "form-label" %>
        <%= f.text_field :name, class: "form-control" %>
        <div class="form-text">Use um nome curto e descritivo para a tag.</div>
      </div>

      <div class="d-flex justify-content-between">
        <%= link_to "Cancelar", tags_path, class: "btn btn-outline-secondary" %>
        <%= f.submit "Salvar Tag", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div> 