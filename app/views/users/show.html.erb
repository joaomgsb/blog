<div class="container py-4">
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-body text-center">
          <div class="mb-3">
            <% if @user.avatar_url.present? %>
              <%= image_tag @user.avatar_url, class: "rounded-circle", style: "width: 150px; height: 150px; object-fit: cover;" %>
            <% else %>
              <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 150px; height: 150px;">
                <i class="bi bi-person-circle" style="font-size: 4rem;"></i>
              </div>
            <% end %>
          </div>
          
          <h4 class="card-title"><%= @user.display_name %></h4>
          <p class="text-muted">@<%= @user.username %></p>
          
          <% if @user.bio.present? %>
            <p class="card-text"><%= @user.bio %></p>
          <% end %>
          
          <div class="d-flex justify-content-center gap-3 mb-3">
            <% if @user.location.present? %>
              <span class="text-muted">
                <i class="bi bi-geo-alt"></i> <%= @user.location %>
              </span>
            <% end %>
            
            <% if @user.website.present? %>
              <%= link_to @user.website, class: "text-decoration-none", target: "_blank" do %>
                <i class="bi bi-link-45deg"></i> Website
              <% end %>
            <% end %>
          </div>
          
          <div class="d-flex justify-content-center gap-3">
            <% if @user.twitter_username.present? %>
              <%= link_to "https://twitter.com/#{@user.twitter_username}", class: "text-decoration-none", target: "_blank" do %>
                <i class="bi bi-twitter"></i>
              <% end %>
            <% end %>
            
            <% if @user.github_username.present? %>
              <%= link_to "https://github.com/#{@user.github_username}", class: "text-decoration-none", target: "_blank" do %>
                <i class="bi bi-github"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-8">
      <h3 class="mb-4">Posts de <%= @user.display_name %></h3>
      
      <% if @user.posts.any? %>
        <div class="row">
          <% @user.posts.each do |post| %>
            <div class="col-12 mb-4">
              <%= render 'posts/post_card', post: post %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <p class="text-muted">Nenhum post encontrado.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>