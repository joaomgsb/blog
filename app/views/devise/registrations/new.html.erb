<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title mb-4">Cadastro</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :name, "Nome completo", class: "form-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :username, "Nome de usuário", class: "form-label" %>
              <%= f.text_field :username, class: "form-control" %>
              <div class="form-text">Apenas letras, números e underscore.</div>
            </div>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Senha", class: "form-label" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              <% if @minimum_password_length %>
                <div class="form-text">Mínimo de <%= @minimum_password_length %> caracteres</div>
              <% end %>
            </div>

            <div class="mb-4">
              <%= f.label :password_confirmation, "Confirmar senha", class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="d-grid">
              <%= f.submit "Cadastrar", class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="mt-3 text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>