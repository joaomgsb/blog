<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title mb-4">Editar Perfil</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :name, "Nome completo", class: "form-label" %>
                <%= f.text_field :name, class: "form-control" %>
              </div>
              
              <div class="col-md-6">
                <%= f.label :username, "Nome de usuário", class: "form-label" %>
                <%= f.text_field :username, class: "form-control" %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :bio, "Biografia", class: "form-label" %>
              <%= f.text_area :bio, rows: 4, class: "form-control" %>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :website, "Website", class: "form-label" %>
                <%= f.url_field :website, class: "form-control" %>
              </div>
              
              <div class="col-md-6">
                <%= f.label :location, "Localização", class: "form-label" %>
                <%= f.text_field :location, class: "form-control" %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :twitter_username, "Twitter", class: "form-label" %>
                <%= f.text_field :twitter_username, class: "form-control" %>
              </div>
              
              <div class="col-md-6">
                <%= f.label :github_username, "GitHub", class: "form-label" %>
                <%= f.text_field :github_username, class: "form-control" %>
              </div>
            </div>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Nova senha", class: "form-label" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              <div class="form-text">Deixe em branco se não quiser alterar</div>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Confirmar nova senha", class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="mb-4">
              <%= f.label :current_password, "Senha atual", class: "form-label" %>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
              <div class="form-text">Precisamos da sua senha atual para confirmar as alterações</div>
            </div>

            <div class="d-flex justify-content-between align-items-center">
              <%= f.submit "Atualizar", class: "btn btn-primary" %>
              <%= link_to "Voltar", :back, class: "btn btn-outline-secondary" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <h3 class="h5 mb-3">Cancelar minha conta</h3>
            <p class="text-muted mb-3">Todos os seus dados serão permanentemente excluídos.</p>
            <%= button_to "Cancelar minha conta", registration_path(resource_name),
                data: { confirm: "Tem certeza? Esta ação não pode ser desfeita." },
                method: :delete,
                class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>