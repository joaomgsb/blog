<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title mb-4">Editar Perfil</h2>
          
          <%= form_with(model: current_user, url: update_profile_path, method: :patch, local: true, class: "needs-validation") do |f| %>
            <% if current_user.errors.any? %>
              <div class="alert alert-danger">
                <h4>Foram encontrados os seguintes erros:</h4>
                <ul>
                  <% current_user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            
            <div class="mb-3 text-center">
              <% if current_user.avatar.attached? %>
                <%= image_tag current_user.avatar, class: "rounded-circle mb-3", style: "width: 150px; height: 150px; object-fit: cover;" %>
              <% else %>
                <%= image_tag "https://via.placeholder.com/150", class: "rounded-circle mb-3" %>
              <% end %>
              
              <div class="mt-2">
                <%= f.file_field :avatar, class: "form-control", accept: "image/*" %>
                <small class="form-text text-muted">Tamanho máximo: 5MB. Formatos aceitos: PNG, JPEG, GIF</small>
              </div>
            </div>
            
            <div class="mb-3">
              <%= f.label :name, "Nome", class: "form-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            
            <div class="mb-3">
              <%= f.label :username, "Nome de usuário", class: "form-label" %>
              <%= f.text_field :username, class: "form-control" %>
              <small class="form-text text-muted">Apenas letras, números e underscore são permitidos</small>
            </div>
            
            <div class="mb-3">
              <%= f.label :bio, "Biografia", class: "form-label" %>
              <%= f.text_area :bio, class: "form-control", rows: 4 %>
            </div>
            
            <div class="mb-3">
              <%= f.label :website, "Website", class: "form-label" %>
              <%= f.url_field :website, class: "form-control" %>
            </div>
            
            <div class="mb-3">
              <%= f.label :location, "Localização", class: "form-label" %>
              <%= f.text_field :location, class: "form-control" %>
            </div>
            
            <div class="d-grid gap-2">
              <%= f.submit "Atualizar Perfil", class: "btn btn-primary" %>
              <%= link_to "Voltar", profile_path(current_user.username), class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 